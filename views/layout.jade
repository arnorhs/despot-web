    body.colored
        header.main
            .standard-wrapper
                h1.logo
                    a(href="/") Despot 
                .search-box
                    input(type="text",class="q",value="",placeholder="Search...")
        // a lot of html.. i know
        .main-queue-wrapper
            .queue-chrome
                .queue-inner
                    h4.now-playing Now playing...
                    #playback_controls
                      .group
                        button.volume(data-volume=20, title="Volume to 20") 2
                        button.volume.active(data-volume=70, title="Volume to 70") 7
                        button.volume(data-volume=100, title="Volume to 100") 10
                      .group
                        button#playback-next(title="Skip this song") &raquo;
                    #song-queue
                        ul
        .main-wrapper
            .standard-wrapper
                section.content!= body
