    head
        title Despot
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href='http://fonts.googleapis.com/css?family=Jockey+One&subset=latin,latin-ext', rel='stylesheet')
        script(src='/javascripts/jquery-1.7.js')
