.main-queue-wrapper
  position: fixed
  left: 50%
  .queue-chrome
    position: relative
    left: 220px
    right: 0px
    background: rgba(0,0,0,0.7)
    box-shadow: inset 0 0 80px rgba(0,0,0,1)
    float: right
    width: 380px
    min-height: 200px
    border-radius: 0 0 5px 5px
    z-index: 4000
    .queue-inner
      padding: 60px 30px 30px 30px
      position: relative
    h4.now-playing
      font-size: 20px
      line-height: 40px
      width: 305px
      overflow: hidden
      white-space: nowrap
      position: absolute
      left: 30px
      color: #B0DE8E
      text-shadow: 0 0 10px rgba(255,255,255, 0.6)
      top: 0px
    #playback-next
      cursor: pointer
      background: transparent url(/images/playback-next.png) no-repeat 0px 0px
      text-indent: -10000px
      overflow: hidden
      width: 26px
      height: 26px
      right: 10px
      top: 7px
      display: block
      position: absolute
      &:hover
        opacity: 0.8
    ul li
      color: #7DAA5A


