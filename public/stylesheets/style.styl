
// reset stuff
@import reset

// the main css...
html,body
  height: 100%

body
  font-family: arial, helvetica, sans-serif
  font-size: 14px
  line-height: 1em
  &.colored
    background: transparent url(/images/body-bg.png) repeat;

h1,h2,h3,h4,h5,h6
  font-family: 'Jockey One', sans-serif
  line-height: 1em

p
  line-height: 1.5em

a
  color: #465838
  text-decoration: none
  &:hover
    text-decoration: underline

.standard-wrapper
  margin: 0px auto
  max-width: 1200px

header.main
  background: rgba(0,0,0,0.4)
  color: #FFFFFF
  height: 40px
  position: absolute
  width: 100%
  z-index: 2
  h1
    float: left
    a
      text-shadow: 0 0 10px rgba(255,255,255, 0.4)
      color: #FFF
      line-height: 40px
      height: 40px
      display: block
      width: 100px
      text-align: center
      font-size: 24px
      background: rgba(0,0,0,0.2)
      &:hover
        text-decoration: none
        background: rgba(0,0,0,0.5)
  .search-box
    float: left
    width: 400px
    margin-left: 40px
    input.q
      border: 0
      width: 375px
      font-size: 15px
      padding: 4px 8px
      margin-top: 6px
      background: rgba(255,255,255,0.2)
      border-radius: 2px
      &:focus
        background: rgba(255,255,255, 1)
      &.spinner
        background-image: url("/images/despot-spinner.gif")
        background-repeat: no-repeat
        background-position: 369px 4px
    input.q::-webkit-input-placeholder
      color: #36700B
    input.q:-moz-placeholder
      color: #36700B

@import playback

.main-wrapper
  min-height: 100%
  position: relative
  z-index: 1

  footer
    position: absolute
    bottom: 0px
    width: 100%
    background: rgba(0,0,0,0.6)
    color: #FFFFFF
    height: 30px
    width: 100%
    a
      color: rgba(255,255,255, 0.7)
    p.credits
      margin: 5px 0 0 0

section.content
  padding: 60px 0 50px 0
  width: 800px


#intro
  background: rgba(255,255,255,0.7)
  padding: 30px
  border-radius: 8px
  box-shadow: inset 0 0 40px #FFF
  min-height: 350px
  h2
    font-size: 40px
    font-weight: bold
    margin: 0.5em 0
  h3
    font-size: 33px
    margin: 0.5em 0
  p
    margin: 1em 0
  p.image
    float: right
    width: auto
    img
      width: 300px

#tracklist
  background: rgba(255,255,255,0.9)
  padding: 30px
  border-radius: 8px
  color: #444
  ul li.track
    height: 30px
    border-bottom: 1px solid #EEE
    padding: 0 6px
    &:hover
      background: rgba(255,255,255,1)
    .song, .artist, .actions
      line-height: 30px
      float: left
      white-space: nowrap
      overflow: hidden
    .song
      font-weight: bold
      margin-right: 10px
      width: 55%
    .artist
      width: 35%
    .actions
      width: 8%
      float: left
      span.add-to-queue
        display: inline-block
        font-size: 11px
        font-weight: bold
        color: #FFF
        background: #465838
        line-height: 17px
        padding: 0 5px
        border-radius: 3px
        cursor: pointer
        &:hover
          background: #7C3989


